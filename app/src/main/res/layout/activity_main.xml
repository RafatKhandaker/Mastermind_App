<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9a9b9c"
    tools:context="com.blackjacksmart.reddragon.mastermind_app.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/logo_iv"
        android:background="@drawable/master_mind_logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:id="@+id/frame_layout"
        android:layout_below="@id/logo_iv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="ENTER NAME : "
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:id="@+id/entername_tv"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:id="@+id/entername_et"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:text="DIFFUCULTY: "
            android:id="@+id/difficulty_tv"
            android:fontFamily="cursive"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Advanced"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/advanced_tv"
        />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adv_rad"
            android:layout_marginTop="151dp"
            android:layout_marginLeft="140dp"
            android:buttonTint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Intermediate"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/intermediate_tv"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/int_rad"
            android:layout_marginTop="191dp"
            android:layout_marginLeft="140dp"
            android:buttonTint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Beginner"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/beginner_tv"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beg_rad"
            android:layout_marginTop="231dp"
            android:layout_marginLeft="140dp"
            android:buttonTint="#FFFFFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Enter"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF"
            android:background="#660000"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingBottom="10dp" />

    </FrameLayout>
</RelativeLayout>
